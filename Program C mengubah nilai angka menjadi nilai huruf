#include <stdio.h>

int main(){
    int nilai;

    printf("Program Konversi Nilai Angka Menjadi Nilai Huruf\n\n");
    printf("Input Nilai: ");
    scanf("%d", &nilai);

    if(nilai > 90)
        printf("Nilai Huruf: A");

    else if(nilai > 70 && nilai <= 90)
        printf("Nilai Huruf: B");

    else if(nilai > 60 && nilai <= 70)
        printf("Nilai Huruf: C");

    else if(nilai > 50 && nilai <= 60)
        printf("Nilai Huruf: D");

    else if(nilai > 0 && nilai <= 50)
        printf("Nilai Huruf: E");
    else
        printf("MAAF: Masukan Anda Salah");
    printf("\n");

    getch();
    return 0;
}
